<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD Sql Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>
<sqlMap> 

	<select id ="m_member" parameterClass="String">
		select nickname, email from member
							
	</select>

	<select id ="m_memberInfo" parameterClass="String">
		select name,birth,mobilenum,bankcode,bankaccnum,socialnum,address
		from memberInfo
	</select>
	
	<update id="confirmUp" parameterClass="java.util.Map">
		update member set confirm=#on# where email=#email# 
	</update>
	
</sqlMap>